<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1B5D0"
    tools:context=".FindMatchesActivity">


    <ImageView
        android:id="@+id/FindMatchesResultUserInfoImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="104dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/FindMatchesResultTextView"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultUserInfoImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/name_mymatch"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/FindMatchesResultUserInfoTextViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/age_mymatch"
        android:textColor="#555555"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/FindMatchesResultUserInfoTextViewBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/bio_mymatch"
        android:textColor="#555555"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultUserInfoTextViewAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/FindMatchesResultInfoBtnYes"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/yes"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/FindMatchesResultInfoBtnReport"
        app:layout_constraintEnd_toStartOf="@id/FindMatchesResultUserInfoBtnNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultUserInfoTextViewBio" />

    <Button
        android:id="@+id/FindMatchesResultUserInfoBtnNo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/no"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/FindMatchesResultUserInfoBtnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/FindMatchesResultInfoBtnYes"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultUserInfoTextViewBio" />

    <Button
        android:id="@+id/FindMatchesResultInfoBtnReport"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/report"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/FindMatchesResultUserInfoBtnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultInfoBtnYes" />

    <Button
        android:id="@+id/FindMatchesResultUserInfoBtnBack"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:text="@string/back"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/FindMatchesResultInfoBtnReport"
        app:layout_constraintTop_toBottomOf="@id/FindMatchesResultUserInfoBtnNo" />


</androidx.constraintlayout.widget.ConstraintLayout>